<link href="/assets/home.scss" rel="stylesheet">

<div class="text-center">
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= form_with model: @user, url: user_registration_path, local: true, class: "form-signin" do |f| %>
    
    <h1 class="h3 mb-3 font-weight-normal">新規登録</h1>

    <%= f.label :name, class: "sr-only" %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "ユーザー名" %>

    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>

    <%= f.label :password, class: "sr-only" %><br />
    <!-- <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %> -->
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>

    <%= f.label :password_confirmation, class: "sr-only" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード確認" %><br />

    <div class="actions">
      <%= f.submit "アカウント登録", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>

</div>