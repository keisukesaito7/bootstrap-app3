<link rel="stylesheet" href="/assets/user/form.scss">

<div class="text-center">
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= form_with model: @user, url: user_registration_path, local: true, class: "form-signin" do |f| %>
    
    <h1 class="h3 mb-3 font-weight-normal">新規登録 <i class="fas fa-address-card fa-spin"></i></h1>
    
    <%= f.label :name, class: "sr-only" %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "ユーザー名" %>

    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>

    <%= f.label :password, class: "sr-only" %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>

    <%= f.label :password_confirmation, class: "sr-only" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード確認" %><br />

    <div class="actions">
      <button type="button" class="btn btn-lg btn-primary btn-block" data-toggle="modal" data-target="#exampleModal">
      確認画面へ
      </button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">確認画面</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            よろしければ登録ボタンを押してください！
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">やっぱりやめる</button>
            <%= f.submit 'アカウント登録', url: user_registration_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
    
  <% end %>



</div>